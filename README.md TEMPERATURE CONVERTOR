# TEMPARATURE-CONVERTOR
''' EXAMPLE OUTPUT:-Welcome to the Simple Login System!
Enter your username: admin
Enter your password: 12345
Login successful! Welcome to the system.
Do you want to try again? (y/n): n
Goodbye!
'''
def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

def celsius_to_kelvin(celsius):
    return celsius + 273.15

def kelvin_to_celsius(kelvin):
    return kelvin - 273.15

def fahrenheit_to_kelvin(fahrenheit):
    return (fahrenheit - 32) * 5/9 + 273.15

def kelvin_to_fahrenheit(kelvin):
    return (kelvin - 273.15) * 9/5 + 32

def temperature_converter():
    print("Welcome to the Temperature Converter!")

    while True:
        print("\nSelect the conversion you want to perform:")
        print("1. Celsius to Fahrenheit")
        print("2. Fahrenheit to Celsius")
        print("3. Celsius to Kelvin")
        print("4. Kelvin to Celsius")
        print("5. Fahrenheit to Kelvin")
        print("6. Kelvin to Fahrenheit")
        print("7. Exit")

        try:
            choice = int(input("Enter choice (1/2/3/4/5/6/7): "))
        except ValueError:
            print("Invalid input! Please enter a number between 1 and 7.")
            continue

        if choice == 7:
            print("Exiting the converter. Goodbye!")
            break

        if choice in [1, 2, 3, 4, 5, 6]:
            try:
                temperature = float(input("Enter the temperature: "))
            except ValueError:
                print("Invalid temperature input. Please enter a valid number.")
                continue

            if choice == 1:
                result = celsius_to_fahrenheit(temperature)
                print(f"{temperature} Celsius is equal to {result} Fahrenheit.")
            elif choice == 2:
                result = fahrenheit_to_celsius(temperature)
                print(f"{temperature} Fahrenheit is equal to {result} Celsius.")
            elif choice == 3:
                result = celsius_to_kelvin(temperature)
                print(f"{temperature} Celsius is equal to {result} Kelvin.")
            elif choice == 4:
                result = kelvin_to_celsius(temperature)
                print(f"{temperature} Kelvin is equal to {result} Celsius.")
            elif choice == 5:
                result = fahrenheit_to_kelvin(temperature)
                print(f"{temperature} Fahrenheit is equal to {result} Kelvin.")
            elif choice == 6:
                result = kelvin_to_fahrenheit(temperature)
                print(f"{temperature} Kelvin is equal to {result} Fahrenheit.")
        else:
            print("Invalid choice! Please select a number between 1 and 7.")

# Run the temperature converter
if __name__ == "__main__":
    temperature_converter()
